            <key> <string>_body</string> </key>
            <value> <string>if new_sr_url is None or new_sr_url == \'\':\n
    raise ValueError()\n
\n
old_sr_document = context\n
portal = context.getPortalObject()\n
\n
instances = portal.portal_catalog(portal_type=\'Software Instance\', url_string=old_sr_document.getUrlString())\n
\n
for instance in instances:\n
    requester = instance.getPredecessorRelatedValue()\n
\n
    # Check if instance is shared\n
    if instance.getPortalType() == \'Software Instance\':\n
        is_slave = False\n
    elif instance.getPortalType() == \'Slave Instance\':\n
        is_slave = True\n
\n
    status = instance.getSlapState()\n
\n
    if status == "start_requested":\n
        state = "started"\n
    elif status == "stop_requested":\n
        state = "stopped"\n
    elif status == "destroy_requested":\n
        state = "destroyed"\n
\n
    requester.requestInstance(\n
        software_release=new_sr_url,\n
        software_title=instance.getTitle(),\n
        software_type=instance.getSourceReference(),\n
        instance_xml=instance.getTextContent(),\n
        sla_xml=instance.getSlaXml(),\n
        shared = is_slave,\n
        state = state,\n
        comment="Upgrade instance %s" % instance.getRelativeUrl()\n
    )\n
</string> </value>
